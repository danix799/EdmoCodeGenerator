<metro:MetroWindow x:Class="CodeGeneratorUI.windows.WinDatabase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                   GlowBrush="{DynamicResource AccentColorBrush}"
                   xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                   BorderThickness="1"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="ADD DATABASE" Height="300" Width="500">
    <Grid Margin="10">
    <StackPanel>
        <TextBlock>Name</TextBlock>
        <TextBox x:Name="txtName" Text="WarehouseV2"></TextBox>
            <TextBlock Margin="0,10,0,0">Provider</TextBlock>
            <ComboBox x:Name="cmbProviders" md:HintAssist.Hint="Select a Provider"  SelectionChanged="OnSelectedProvider"></ComboBox>
            <TextBlock Margin="0,10,0,0">ConnectionString</TextBlock>
            <TextBox x:Name="txtConnectionString" Text="Server=localhost;Database=warehousev2;Uid=root;Pwd=;SslMode=none;Allow User Variables=True;"></TextBox>       
        
    </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Click="OnClickSaveDatabase" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <md:PackIcon Kind="ContentSave" Style="{StaticResource MaterialDesignButtonInlineIcon}"></md:PackIcon>
                    <TextBlock Text="Save Database"/>
                </StackPanel>
            </Button>
            <Button Click="OnClickClose">
                <StackPanel Orientation="Horizontal">
                    <md:PackIcon Kind="Close" Style="{StaticResource MaterialDesignButtonInlineIcon}"></md:PackIcon>
                    <TextBlock Text="Cancel"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</metro:MetroWindow>
